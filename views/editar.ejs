<%- include layout/header.ejs %>
<div class="container">
	<form class="form-horizontal" action="/usuarios/editar/<%=usuario[0].id_usuario%>" method="post">
		<div class="form-group">
			<label>
				Nome:<input class="form-control" type="text" name="nome" value="<%=usuario[0].nome%>">
			</label>
		</div>
		<div class="form-group">
			<label>
				Email:<input class="form-control" type="email" name="email" value="<%=usuario[0].email%>">
			</label>
		</div>
		<div class="form-group">
			<label>
				Telefone:<input class="form-control" type="number" name="telefone" value="<%=usuario[0].telefone%>">
			</label>
		</div>
			
			<%
			var checkedM = "";
			var checkedF = "";
			if("m" === usuario[0].sexo){
				checkedM = "checked";
			}else{
				checkedF = "checked";
			}
			%>
		<div class="form-group">
			<label>Sexo:</label>
			<div class="radio-inline">
				<label>
					<input  type="radio" name="sexo" value="m" <%=checkedM%>>Masculino
				</label>
			</div>
			<div class="radio-inline">
				<label>
					<input type="radio" name="sexo" value="f" <%=checkedF%>>Feminino
				</label>
			</div>
		</div>
		<button type="submit" class="btn btn-success">Alterar</button>
		<a href="javascript:window.history.go(-1)" class="btn btn-danger">Voltar</a>
	</form>
</div>
<%- include layout/footer.ejs%>